<h1>Listing posts</h1>

<%= magic_grid @posts, [:title, :body, :published, :user] do |row| %>
  <tr>
    <td><%= row.title %></td>
    <td><%= row.body.truncate(30) %></td>
    <td><%= row.published %></td>
    <td><%= link_to row.user, row.user %></td>
  </tr>
<% end %>


<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Published</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.published %></td>
    <td><%= post.user %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

